<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.hello.mapper.DeptMapper">

    <!-- 结果映射 -->
    <resultMap id="BaseResultMap" type="com.example.hello.entity.Dept">
        <id column="id" property="id" jdbcType="INTEGER"/>
        <result column="name" property="name" jdbcType="VARCHAR"/>
        <result column="create_time" property="createTime" jdbcType="TIMESTAMP"/>
        <result column="update_time" property="updateTime" jdbcType="TIMESTAMP"/>
    </resultMap>

    <!-- 查询所有部门 -->
    <select id="selectAll" resultMap="BaseResultMap">
        SELECT id, name, create_time, update_time
        FROM dept
        ORDER BY update_time DESC
    </select>

    <!-- 根据ID查询部门 -->
    <select id="selectById" parameterType="int" resultMap="BaseResultMap">
        SELECT id, name, create_time, update_time
        FROM dept
        WHERE id = #{id}
    </select>

    <!-- 添加部门 -->
    <insert id="insert" parameterType="com.example.hello.entity.Dept" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO dept (name)
        VALUES (#{name})
    </insert>

    <!-- 修改部门 -->
    <update id="update" parameterType="com.example.hello.entity.Dept">
        UPDATE dept
        SET name = #{name}
        WHERE id = #{id}
    </update>

    <!-- 删除部门 -->
    <delete id="deleteById" parameterType="int">
        DELETE FROM dept
        WHERE id = #{id}
    </delete>

</mapper>

